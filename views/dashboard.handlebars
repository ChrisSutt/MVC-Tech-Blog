<div class="row">
  <div class="col-auto">
    <h2><span>⭐</span>Welcome aboard, {{username}}!<span>⭐</span></h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Share Your Thoughts:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <input class="form-input" type="text" id="blog-title" name="blog-title" placeholder="Title Your Post" />
      </div>
      
      <div class="form-group">
        <textarea class="form-input" id="blog-desc" name="blog-desc" placeholder="Your Inspiring Words"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Publish</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Discover Other Voices:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{blog.id}}">REMOVE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/app.js"></script>
